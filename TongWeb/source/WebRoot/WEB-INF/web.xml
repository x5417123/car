<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <welcome-file-list>
    <welcome-file>mydevice/index.html</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <filter>
    <filter-name>RequestCharacterEncoding</filter-name>
    <filter-class>com.kh.webutils.RequestCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>POST.*</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>GET.MSIE 6.0</param-name>
      <param-value>GBK</param-value>
    </init-param>
    <init-param>
      <param-name>GET.Chrome</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>GET.*</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>RequestCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>RadioServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.RadioServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LiveServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.AlbumServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SessionServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.SessionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FriendServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.FriendServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GeoCodingService</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.GeoCodingService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CategoryFileServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.CategoryFileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConfigServlet</servlet-name>
    <servlet-class>com.kh.tong.web.servlet.ConfigServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RadioServlet</servlet-name>
    <url-pattern>/servlet/radio</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LiveServlet</servlet-name>
    <url-pattern>/servlet/album</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SessionServlet</servlet-name>
    <url-pattern>/servlet/session</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FriendServlet</servlet-name>
    <url-pattern>/servlet/friend</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GeoCodingService</servlet-name>
    <url-pattern>/servlet/other</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoryFileServlet</servlet-name>
    <url-pattern>/servlet/resource</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ConfigServlet</servlet-name>
    <url-pattern>/servlet/configureServlet</url-pattern>
  </servlet-mapping>
</web-app>